extends layout
mixin input-field(field, value)
    .row
        span.req-input
            span.input-status(data-toggle="tooltip" data-placement="top"
            title="#{field}")
            input.form-control(id="#{field}" value="#{value}" type="text" placeholder="#{field}")

block content
    link(rel="stylesheet" href="/stylesheets/user_info.css")
    .main.container
        .row
            .col-md-6.col-md-offset-3
                .form-container
                    form(method='POST' action='/user/update_info')
                        .row
                            .form-title
                                span Member Info
                        .input-container
                        each value, field in user
                            +input-field(field, value)
                        input#open-id(type="hidden" value="#{openId}")
                        button.btn.btn-primary(type='submit') Save

