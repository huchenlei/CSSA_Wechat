extends layout

block content
  meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui")
  link(rel="stylesheet", href="/stylesheets/weui.css")
  link(rel="stylesheet", href="/stylesheets/console.css")
  script(src="/javascripts/helpers.js")

  h1 CSSA WeChat Console
  //- discipline: read, add, delete, merge, modify
  //- user: name, card, info, search
  div.weui-cells.discplines-wrapper
    h2 Disciplines
    .global-actions
      button.merge.weui-btn.weui-btn_primary ><
      button.add.weui-btn.weui-btn_primary +
      button.refresh.weui-btn.weui-btn_primary ↻
  div.weui-cells.menu-wrapper
    h2 Menu Items
    i(class="weui-icon-success weui-icon_msg")
    div#editor menu.json will show here.
  script(src="/javascripts/console.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.8/ace.js")
